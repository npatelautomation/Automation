{
  "parserOptions": {
    "ecmaVersion": 6
  },

  "env": {
    "es6": true,
    "mocha": true,
    "node": true
  },

  "rules": {
    "indent": [
      2,
      "tab",
      {
        "SwitchCase": 1
      }
    ],
    "curly": [
      2,
      "all" //maybe multi-line?
    ],
    "keyword-spacing": [
      2,
      {
        "overrides": {
          "else": {
            "before": true
          },
          "catch": {
            "before": true
          }
        }
      }
    ],
    "space-before-function-paren": [
      2,
      {
        "anonymous": "ignore",
        "named": "never"
      }
    ],
    "dot-location": [
      2,
      "property"
    ],
    "operator-linebreak": [
      2,
      "after"
    ],
    "no-spaced-func": 2,
    "array-bracket-spacing": [
      2,
      "always"
    ],
    "space-in-parens": [
      2,
      "never"
    ],
    "key-spacing": [
      2,
      {
        "beforeColon": false,
        "afterColon": true,
      }
    ],
    "space-unary-ops": [
      2,
      {
        "nonwords": false,
        "overrides": {}
      }
    ],
    "no-mixed-spaces-and-tabs": 2,
    "no-trailing-spaces": 2,
    "comma-style": [
      2,
      "last"
    ],
    "comma-spacing": 2,
    "yoda": [
      2,
      "never"
    ],
    "brace-style": [
      2,
      "1tbs",
      {
        "allowSingleLine": true
      }
    ],
    "space-before-blocks": [
      2,
      "always"
    ],
    "arrow-spacing": [
      2,
      {
        "before": true,
        "after": true
      }
    ],
    "arrow-body-style": [
      2,
      "as-needed"
    ],
    "space-infix-ops": 2,
    "global-require": 2,
    "camelcase": 2,
    "no-var": 2,
    "block-spacing": 2
  }
}
